@model iLearning.Web.Models.ViewModels.Inventories.InventoryUpsertVm
@{
    ViewData["Title"] = "Create Inventory";
}

<div class="container py-4" style="max-width: 900px">
    <div class="d-flex align-items-center justify-content-between gap-2 mb-3">
        <h2 class="mb-0">Create Inventory</h2>
        <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Back</a>
    </div>

    <div class="card">
        <div class="card-body">
            <form method="post" asp-action="Create">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <partial name="_UpsertForm" model="Model" />

                <div class="d-flex gap-2 mt-4">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Cancel</a> 
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}