<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - iLearning.Web</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    </head>
    <body>
        <header class="border-bottom bg-white">
            <nav class="navbar navbar-expand-lg navbar-light">
                <div class="container">
                    <a class="navbar-brand fw-semibold" asp-controller="Home" asp-action="Index">iLearning</a>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#topNav"
                            aria-controls="topNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse gap-3" id="topNav">
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                        </ul>

                        <form class="d-flex flex-grow-1" method="get" action="/search" role="search">
                             <input class="form-control me-2" name="q" type="search" placeholder="Search inventories & items..."
                                    value="@Context.Request.Query["q"]" aria-label="Search">
                             <button class="btn btn-outline-primary" type="submit">Search</button>
                        </form>

                        <div class="d-flex align-items-center gap-2 ms-5">
                        @if (User?.Identity?.IsAuthenticated == true)
                            {
                                <span class="btn btn-secondary disabled me-2">
                                    @User.Identity!.Name
                                </span>

                                <form method="post" action="/auth/logout" class="m-0">
                                     @Html.AntiForgeryToken()
                                     <button class="btn btn-outline-secondary" type="submit">Logout</button>
                                </form>
                            }
                            else
                            {
                                <a class="btn btn-outline-secondary" href="/auth/login">Login</a>
                                <a class="btn btn-primary" href="/auth/register">Register</a>
                            }
                        </div>
                    </div>
                </div>
            </nav>
        </header>

        <main role="main">
            @RenderBody()
        </main>

        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        @RenderSection("Scripts", required: false)
    </body>
</html>